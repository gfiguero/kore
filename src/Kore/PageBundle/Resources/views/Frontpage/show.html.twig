{% extends 'KorePageBundle::base.html.twig' %}
{% use 'KorePageBundle::navbar.html.twig' %}
{% use 'KorePageBundle::sidebar.html.twig' %}
{% use 'KorePageBundle::icons.html.twig' %}

{% set translation_domain = 'KorePageBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'frontpage.title.index'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'frontpage.title.index'|trans }}</h1>
                {% include 'KorePageBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('frontpage_index') }}">{{ icon('list') }}&nbsp;{{ 'frontpage.list.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('frontpage_edit', { 'id': frontpage.id }) }}">{{ icon('edit') }}&nbsp;{{ 'frontpage.new.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'frontpage.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'frontpage.show.properties'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                            <dt>{{ 'frontpage.form.id'|trans }}</dt>
                                <dd>{% if frontpage.id %}{{ frontpage.id }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.name'|trans }}</dt>
                                <dd>{% if frontpage.name %}{{ frontpage.name }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.title'|trans }}</dt>
                                <dd>{% if frontpage.title %}{{ frontpage.title }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.subtitle'|trans }}</dt>
                                <dd>{% if frontpage.subtitle %}{{ frontpage.subtitle }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.about'|trans }}</dt>
                                <dd>{% if frontpage.about %}{{ frontpage.about }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.createdAt'|trans }}</dt>
                                <dd>{% if frontpage.createdAt %}{{ frontpage.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            <dt>{{ 'frontpage.form.updatedAt'|trans }}</dt>
                                <dd>{% if frontpage.updatedAt %}{{ frontpage.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'frontpage.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'frontpage.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o') }}&nbsp;{{ 'frontpage.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

