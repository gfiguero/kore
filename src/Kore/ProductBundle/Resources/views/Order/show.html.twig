{% extends 'KoreProductBundle::base.html.twig' %}
{% use 'KoreProductBundle::navbar.html.twig' %}
{% use 'KoreProductBundle::sidebar.html.twig' %}
{% use 'KoreProductBundle::icons.html.twig' %}

{% set translation_domain = 'KoreProductBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'order.index.title'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'order.title.index'|trans }}</h1>
                {% include 'KoreProductBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('order_index') }}">{{ icon('list') }}&nbsp;{{ 'order.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('order_edit', { 'id': order.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'order.new.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'order.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'order.show.title'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                            <dt>{{ 'order.form.id'|trans }}</dt>
                                <dd>{% if order.id %}{{ order.id }}{% endif %}</dd>
                            <dt>{{ 'order.form.name'|trans }}</dt>
                                <dd>{% if order.name %}{{ order.name }}{% endif %}</dd>
                            <dt>{{ 'order.form.phone'|trans }}</dt>
                                <dd>{% if order.phone %}{{ order.phone }}{% endif %}</dd>
                            <dt>{{ 'order.form.address'|trans }}</dt>
                                <dd>{% if order.address %}{{ order.address }}{% endif %}</dd>
                            <dt>{{ 'order.form.comment'|trans }}</dt>
                                <dd>{% if order.comment %}{{ order.comment }}{% endif %}</dd>
                            <dt>{{ 'order.form.code'|trans }}</dt>
                                <dd>{% if order.code %}{{ order.code }}{% endif %}</dd>
                            <dt>{{ 'order.form.createdAt'|trans }}</dt>
                                <dd>{% if order.createdAt %}{{ order.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                            <dt>{{ 'order.form.updatedAt'|trans }}</dt>
                                <dd>{% if order.updatedAt %}{{ order.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'order.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'order.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o') }}&nbsp;{{ 'order.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

