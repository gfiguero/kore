{% extends 'KorePageBundle::base.html.twig' %}
{% use 'KorePageBundle::navbar.html.twig' %}
{% use 'KorePageBundle::sidebar.html.twig' %}
{% use 'KorePageBundle::icons.html.twig' %}

{% set translation_domain = 'KorePabloBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'testing.title.index'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'testing.title.index'|trans }}</h1>
                {% include 'KorePageBundle::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('testing_index') }}">{{ icon('list') }}&nbsp;{{ 'testing.list.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('testing_edit', { 'id': testing.id }) }}">{{ icon('edit') }}&nbsp;{{ 'testing.new.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o') }}&nbsp;{{ 'testing.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'testing.show.properties'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal dl-horizontal-sm dl-horizontal-md dl-horizontal-lg">
                            <dt>{{ 'testing.form.id'|trans }}</dt>
                                <dd>{% if testing.id %}{{ testing.id }}{% endif %}</dd>
                            <dt>{{ 'testing.form.nombre'|trans }}</dt>
                                <dd>{% if testing.nombre %}{{ testing.nombre }}{% endif %}</dd>
                            <dt>{{ 'testing.form.apellido'|trans }}</dt>
                                <dd>{% if testing.apellido %}{{ testing.apellido }}{% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'testing.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'testing.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o') }}&nbsp;{{ 'testing.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

